{
  "compilerOptions": {
    "module": "esNext",
    "target": "es2017",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "preserve",
    "allowJs": true,
    "noImplicitAny": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/__mocks__/**/*"
  ]
}
